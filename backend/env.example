# 資料庫配置 (Zeabur)
DATABASE_URL="mysql://username:password@your-zeabur-mysql-host:3306/danmaku_live"

# Redis 配置 (Zeabur)
REDIS_URL="redis://your-zeabur-redis-host:6379"

# JWT 配置
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here"

# 應用程式配置
NODE_ENV="development"
PORT=3001

# 用戶管理
# 使用 backend/config/users.json 檔案來管理用戶
# 請編輯 backend/config/users.json 檔案來添加或修改用戶

# 表情符號白名單
EMOJI_WHITELIST="👍,😂,😭,🎉"

# 速率限制配置
RATE_LIMIT_MAX=1
RATE_LIMIT_WINDOW=3000

# 日誌配置
LOG_LEVEL="info"

# ========================================
# 其他連線選項 (註解掉不需要的)
# ========================================

# Docker 連線 (本地開發)
# DATABASE_URL="mysql://danmaku_user:danmaku_password@localhost:3306/danmaku_live"
# REDIS_URL="redis://localhost:6379"

# XAMPP 連線 (如果使用 XAMPP)
# DATABASE_URL="mysql://root:@localhost:3306/danmaku_live"
